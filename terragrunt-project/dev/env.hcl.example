# Example environment configuration file
# Copy this file to env.hcl and customize for your environment

locals {
  # Environment name
  environment = "dev"
  
  # AWS Configuration
  aws_region = "us-east-1"
  
  # Network Configuration
  vpc_cidr     = "10.0.0.0/16"
  subnet_count = 3
  
  # Database Configuration
  database_name     = "dev-postgres-db"
  namespace         = "database"
  postgres_version  = "15"
  db_replicas       = 1
  storage_size      = "10Gi"
  storage_class     = "standard"
  
  # Database Resources
  db_cpu_request    = "250m"
  db_cpu_limit      = "1000m"
  db_memory_request = "256Mi"
  db_memory_limit   = "1Gi"
  
  # Application Configuration
  application_name    = "dev-web-app"
  application_version = "1.0.0"
  
  # Auto Scaling Configuration
  desired_capacity = 3
  min_instances    = 1
  max_instances    = 10
  
  # Instance Configuration
  instance_type     = "t3.micro"
  health_check_path = "/"
  
  # Feature Flags
  enable_load_balancer = true
  
  # Common Tags
  common_tags = {
    Environment = "dev"
    ManagedBy   = "Terragrunt"
    Project     = "terragrunt-demo"
  }
}
